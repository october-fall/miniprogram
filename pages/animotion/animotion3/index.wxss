.box{
  width: 100%;
  height: 500rpx;
  background-color: rgb(245, 250, 253);
  border: 2rpx solid rgb(237, 247, 253);
}
.border{
  margin: 40rpx;
  height: 420rpx;
  background-color: rgb(226, 239, 248);
  border: 2rpx solid rgb(237, 247, 253);
  border-radius: 10%;
  display: flex;
  justify-content: center;
}
.content{
  width: 176rpx;
  display: flex;
  justify-content: center;
}
.ball view{
  width: 40rpx;
  height: 200rpx;
  border-right: 4rpx solid rgb(68, 209, 214);
}
.ball image{
  width: 80rpx;
  height: 80rpx;
  border: 4rpx solid rgb(68, 209, 214);
  border-radius: 50%;
}
.leftb{
  animation: rotateLeft 2s ease-in-out infinite;
  transform-origin: top center;
}
.rightb{
  animation: rotateRight 2s ease-in-out infinite;
  transform-origin: top center;
}
.middleb{
  animation: rotate 2s ease-in-out infinite;
  transform-origin: top center;
}
@keyframes rotateLeft{
  0%{
    transform:rotate(2deg);
  }
  25%{
    transform:rotate(35deg);
  }
  53%{
    transform:rotate(-2deg);
  }
  75%{
    transform:rotate(0deg);
  }
  97%{
    transform:rotate(0deg);
  }
  100%{
    transform:rotate(2deg);
  }
}
@keyframes rotateRight{
  0%{
    transform:rotate(2deg);
  }
  25%{
    transform:rotate(0deg);
  }
  48%{
    transform:rotate(0deg);
  }
  75%{
    transform:rotate(-35deg);
  }
  100%{
    transform:rotate(2deg);
  }
}
@keyframes rotate{
  0%{
    transform:rotate(2deg);
  }
  25%{
    transform:rotate(0deg);
  }
  47%{
    transform:rotate(0deg);
  }
  53%{
    transform:rotate(-2deg);
  }
  75%{
    transform:rotate(0deg);
  }
  97%{
    transform:rotate(0deg);
  }
  100%{
    transform:rotate(2deg);
  }
}