.circle{
  border-radius: 50%;
  animation: miss 1.5s ease-out ;
}
.light{
  animation: miss 1.5s ease-out ;
}
@keyframes miss{
  0%{
    opacity: 1;
  }85%{
    opacity: 1;
  }93%{
    opacity: 0;
  }100%{
    opacity: 0;
  }
}

