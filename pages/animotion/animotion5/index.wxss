.box{
  width: 750rpx;
  height: 100vh;
  background-color: rgb(222, 226, 216);
}
.hiddenball{
  display: none;
}
.ball{
  animation: doudou 1.5s ease-out ;
}
@keyframes doudou{
  0%{
    transform: translate(0rpx);
    transform: scale3d(0,0,0);
  }
  20%{
    transform: translate(8rpx,12rpx);
    transform: scale3d(1,1,1);
  }
  40%{
    transform: translate(3rpx,5rpx);
  }
  60%{
    transform: translate(5rpx,10rpx);
  }
  80%{
    transform: translate(13rpx,5rpx);
    transform: scale3d(1,1,1);
  }
  90%{
    transform: translate(0rpx,6rpx);
    transform: scale3d(2,2,2);
  }
  100%{
    transform: translate(0rpx);
    transform: scale3d(1.2,1.2,1.2);
  }
}

